generator client {
  provider = "prisma-client-js"
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  password  String
  email     String @unique
  gender    String
  photo     String
  age       String
  todos     Todo[]

}

model Todo {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  created_at  DateTime
  end_at      DateTime
  completed   Boolean
  user        User @relation(fields: [userId], references: [id])
  userId      String @db.ObjectId

}

